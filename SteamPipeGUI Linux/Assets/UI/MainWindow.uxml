<ui:UXML xmlns:ui="UnityEngine.UIElements" editor-extension-mode="False">
    <Style src="project://database/Assets/UI/MainStyle.uss?fileID=7433441132597879392&amp;guid=c936bc29698b13f33a7bc9ba5b1c8ea4&amp;type=3#MainStyle"/>
    <ui:VisualElement name="root" class="root-container">
        <ui:VisualElement name="header" class="header">
            <ui:Label text="SteamPipe GUI" class="title-label"/>
            <ui:Label name="status-label" text="Not connected" class="status-label"/>
        </ui:VisualElement>
        <ui:VisualElement name="main-layout" class="main-layout">
            <ui:VisualElement name="sidebar" class="sidebar">
                <ui:Button name="btn-login" text="ðŸ”  Login" class="nav-button"/>
                <ui:Button name="btn-build" text="ðŸ”¨  Build" class="nav-button"/>
                <ui:Button name="btn-settings" text="âš™   Settings" class="nav-button nav-button--bottom"/>
            </ui:VisualElement>
            <ui:VisualElement name="content-area" class="content-area">
                <ui:VisualElement name="banner-no-steamcmd" class="banner banner--warn">
                    <ui:Label text="âš   steamcmd not found. Set the Steamworks SDK folder in Settings." class="banner-text"/>
                    <ui:Button name="btn-banner-go-settings" text="Settings â†’" class="banner-button"/>
