                <ui:VisualElement name="panel-login" class="panel">
                    <ui:Label text="Steam Login" class="panel-title"/>
                    <ui:TextField name="field-username" label="Username" class="input-field"/>
                    <ui:TextField name="field-password" label="Password" password="true" class="input-field"/>
                    <ui:TextField name="field-steamguard" label="Steam Guard (if required)" class="input-field"/>
                    <ui:VisualElement class="button-row">
                        <ui:Button name="btn-do-login" text="Login" class="primary-button"/>
                        <ui:Button name="btn-do-logout" text="Logout" class="secondary-button"/>
                    </ui:VisualElement>
                </ui:VisualElement>
                <ui:VisualElement name="panel-build" class="panel">
                    <ui:Label text="Build &amp; Upload" class="panel-title"/>
                    <ui:TextField name="field-appid" label="App ID" class="input-field"/>
                    <ui:TextField name="field-build-desc" label="Build description" class="input-field"/>
                    <ui:VisualElement class="field-with-button">
                        <ui:TextField name="field-content-path" label="Content folder" class="input-field input-field--grow"/>
                        <ui:Button name="btn-browse-path" text="Browse..." class="secondary-button secondary-button--inline"/>
                    </ui:VisualElement>
                    <ui:DropdownField name="dropdown-branch" label="Branch" class="input-field"/>
