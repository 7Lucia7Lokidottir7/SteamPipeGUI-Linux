                        <ui:Button name="btn-browse-steamcmd" text="Browse..." class="secondary-button secondary-button--inline"/>
                    </ui:VisualElement>
                    <ui:Label text="Other" class="settings-section-label"/>
                    <ui:TextField name="field-log-lines" label="Max log lines" value="500" class="input-field"/>
                    <ui:VisualElement class="button-row">
                        <ui:Button name="btn-save-settings" text="Save" class="primary-button"/>
                        <ui:Button name="btn-clear-log" text="Clear log" class="secondary-button"/>
                    </ui:VisualElement>
